<UserControl x:Class="MonthlyClaimSystem.SubmitClaimView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10">
        <Label Content="Personal Details"/>
        
        <Label Content="Lecture Name"/>
        <TextBox x:Name="LectureNameTextBox"/>
        
        <Label Content="Lecture Surname"/>
        <TextBox x:Name="LectureSurnameTextBox"/>

        <Label Content="Employee No."/>
        <TextBox x:Name="EmployeeNoTextBox"/>

        <Label Content="Contact Details"/>
        <TextBox x:Name="ContactDetails"/>






        <Label Content="Claim details"/>
        <Label Content="Module Name"/>
        <TextBox x:Name="ModuleNameTextBox"/>

        <Label Content="Programme"/>
        <TextBox x:Name="ProgrammeTextBox"/>

        <Label Content="Number Of Hours"/>
        <TextBox x:Name="NumberOfHoursTextBox"/>



        <Label Content="Claim Amount"/>
        <TextBox x:Name="ClaimAmountTextBox"/>

        <Label Content="Supporting Documents"/>
        <TextBox x:Name="SupportingDocumentsTextBox" IsReadOnly="True"/>
        <Button Content="Browse" Click="BrowseFiles_Click"/>
        
        <Button Content="Add Another Module" Click="AddModule_Click" Margin="0,10,0,0"/>

        <Button Content="Submit" Click="SubmitClaim_Click" Margin="0,12,0,0"/>
    </StackPanel>
</UserControl>